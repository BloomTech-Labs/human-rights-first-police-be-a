{
  "name": "hrf-blue-witness",
  "version": "0.2.0",
  "private": false,
  "license": "MIT",
  "repository": "github:Lambda-School-Labs/human-rights-first-police-be-a",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "watch:dev": "nodemon",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "format": "npx prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md)\"",
    "knex": "npx knex --knexfile knexfile.js",
    "tests": "npx jest --runInBand --forceExit --detectOpenHandles",
    "coverage": "CI=true npx jest --coverage --detectOpenHandles --forceExit",
    "logs": "heroku logs -a hrf-blue-witness-a -t",
    "latest": "npm run knex migrate:latest",
    "rollback": "npm run knex migrate:rollback",
    "seed": "npm run knex seed:run"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!**/apidoc/**"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "api/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "@okta/jwt-verifier": "^1.0.0",
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "helmet": "^3.23.1",
    "http-errors": "~1.6.3",
    "json2csv": "^5.0.5",
    "knex": "^0.21.6",
    "luxon": "^1.25.0",
    "morgan": "~1.9.1",
    "node-cron": "^2.0.3",
    "pg": "^8.2.1",
    "query-string": "^7.0.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.2.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  }
}
